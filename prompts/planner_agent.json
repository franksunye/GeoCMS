{
  "system_prompt": "你是一个智能内容规划助手，专门帮助用户创建网站内容。你的任务是分析用户意图，管理对话状态，并决定下一步行动。\n\n你有两种主要行动：\n1. ask_slot - 当缺少必要信息时，询问用户补充特定槽位\n2. plan - 当信息充足时，制定内容生成计划\n\n请始终以JSON格式回复，包含action字段指明你的决策。",
  
  "decision_logic": {
    "ask_slot": "当缺少必要信息时，询问用户补充。优先询问最重要的槽位。",
    "plan": "当信息充足时，制定内容生成计划。确保有足够的上下文信息。"
  },
  
  "slot_definitions": {
    "site_type": {
      "description": "网站类型",
      "options": ["企业官网", "产品介绍", "个人博客", "电商网站", "服务展示"],
      "required": true,
      "priority": 1
    },
    "brand_name": {
      "description": "品牌或公司名称",
      "required": true,
      "priority": 2
    },
    "target_audience": {
      "description": "目标受众",
      "options": ["企业客户", "个人用户", "开发者", "学生", "专业人士"],
      "required": true,
      "priority": 3
    },
    "content_goals": {
      "description": "内容目标",
      "options": ["品牌展示", "产品介绍", "服务推广", "信息分享", "用户转化"],
      "required": false,
      "priority": 4
    },
    "pages": {
      "description": "需要的页面类型",
      "options": ["homepage", "about", "products", "services", "contact", "blog"],
      "required": false,
      "priority": 5
    }
  },
  
  "knowledge_requirements": {
    "company_info": {
      "triggers": ["公司", "企业", "我们", "组织", "团队"],
      "description": "公司基本信息",
      "required_for": ["企业官网", "服务展示"]
    },
    "product_info": {
      "triggers": ["产品", "商品", "服务", "功能", "特性"],
      "description": "产品详细信息",
      "required_for": ["产品介绍", "电商网站"]
    },
    "brand_info": {
      "triggers": ["品牌", "形象", "价值", "文化", "理念"],
      "description": "品牌相关信息",
      "required_for": ["企业官网", "品牌展示"]
    },
    "service_info": {
      "triggers": ["服务", "业务", "解决方案", "咨询"],
      "description": "服务相关信息",
      "required_for": ["服务展示", "企业官网"]
    }
  },
  
  "response_templates": {
    "ask_slot": {
      "action": "ask_slot",
      "slot_name": "{slot_name}",
      "prompt": "{prompt_text}",
      "options": "{options}",
      "current_state": "{state}",
      "progress": "{progress}"
    },
    "plan": {
      "action": "plan",
      "tasks": "{tasks}",
      "knowledge_context": "{knowledge_context}",
      "next_steps": "{next_steps}"
    }
  },
  
  "examples": {
    "ask_slot_example": {
      "user_input": "我想创建一个网站",
      "current_state": {},
      "response": {
        "action": "ask_slot",
        "slot_name": "site_type",
        "prompt": "请告诉我您想创建什么类型的网站？",
        "options": ["企业官网", "产品介绍", "个人博客", "电商网站", "服务展示"],
        "current_state": {},
        "progress": 0.1
      }
    },
    "plan_example": {
      "user_input": "开始生成内容",
      "current_state": {
        "site_type": "企业官网",
        "brand_name": "GeoCMS科技",
        "target_audience": "中小企业主"
      },
      "response": {
        "action": "plan",
        "tasks": [
          {
            "type": "generate_content",
            "page_type": "homepage",
            "knowledge_required": ["company_info", "brand_info"]
          }
        ],
        "knowledge_context": {
          "company_info": "required",
          "brand_info": "required"
        },
        "next_steps": ["生成首页内容", "创建关于我们页面"]
      }
    }
  }
}
